.row
  .col-xs-12
    .panel.panel-primary
      .panel-heading
        span = t('.withdraw', sn: @gc.id)
      .panel-body
        = description_for :withdraw do
          = item_for @gc, :id
          = item_for @gc, :created_at
          = item_for @gc, :aasm_state_text
          hr.split
          = item_for @gc.member, :name
          = item_for @gc, :fund_extra
          = item_for @gc, :fund_uid do
            span = .fund_uid.truncate(40)
          = item_for @gc, :amount
          hr.split
          = item_for @gc, :remark
          hr.split
          ul.list-inline.pull-right
            - if @gc.may_reject?
              li
                = link_to t('.reject'), url_for([:admin, @gc]), class: 'btn btn-danger', method: 'DELETE', confirm: t('.reject_confirm')
            - if @gc.may_process?
              li
                = link_to t('.process'), url_for([:admin, @gc]), class: 'btn btn-primary', method: 'PATCH'

  .col-xs-12
    = render partial: 'shared/admin/member', locals: {member: @gc.member}
    = render partial: 'shared/admin/account', locals: {account: @gc.account}
